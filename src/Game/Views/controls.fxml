<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane prefHeight="300.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Separator layoutX="17.0" layoutY="14.0" prefHeight="22.0" prefWidth="866.0" HBox.hgrow="ALWAYS" />
      <HBox fx:id="controlsBox" alignment="CENTER_LEFT" layoutX="20.0" layoutY="37.0" prefHeight="194.0" prefWidth="866.0">
         <children>
            <VBox prefHeight="217.0" prefWidth="168.0">
               <children>
                  <CheckBox fx:id="chkPlayAsBot" onAction="#toggleBotPlaying" mnemonicParsing="false" prefHeight="21.0" prefWidth="169.0" text="Play as bot">
                     <VBox.margin>
                        <Insets bottom="8.0" />
                     </VBox.margin>
                  </CheckBox>
                  <Label prefHeight="0.0" prefWidth="151.0" text="Select your opponent" />
                  <ListView fx:id="playerList" prefHeight="159.0" prefWidth="150.0" />
               </children>
            </VBox>
            <Button fx:id="challengePlayer" mnemonicParsing="false" prefHeight="56.0" prefWidth="87.0" text="Challenge">
               <HBox.margin>
                  <Insets left="16.0" />
               </HBox.margin></Button>
            <Separator orientation="VERTICAL" prefHeight="217.0" prefWidth="0.0">
               <HBox.margin>
                  <Insets left="24.0" right="24.0" />
               </HBox.margin>
            </Separator>
            <Button mnemonicParsing="false" fx:id="challengeComputer" prefHeight="56.0" prefWidth="300.0" text="Play against the computer" />
         </children>
      </HBox>
   </children>
</Pane>
